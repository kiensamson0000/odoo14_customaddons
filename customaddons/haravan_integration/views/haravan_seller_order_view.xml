<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="haravan_seller_order_view_form" model="ir.ui.view">
            <field name="name">haravan.seller.order.view.form</field>
            <field name="model">haravan.seller.orders</field>
            <field name="arch" type="xml">
              <form string="Sales Order">
                <header>
                    <button name="create_orers_haravan" string="Create Order" class="oe_highlight" type="object" />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="order_id" placeholder="Order ID" readonly="1"/>
                        </h1>
                    </div>
                    <group name="order_header">
                        <group name="partner_details">
                            <field name="name" />
                            <field name="address1" />
                            <field name="created_at" readonly="1"/>
                            <field name="email"/>
                            <field name="phone"/>
                        </group>
                        <group name="order_details">
                            <field name="fulfillment_status"/>
                            <field name="gateway"/>
                            <field name="financial_status"/>
                            <field name="subtotal_price" readonly="1"/>
                            <field name="source_name"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Order Lines" name="order_lines">
                            <field name="order_line">
                                <tree>
                                    <field name="product_id"/>
                                    <field name="name"/>
                                    <field name="sku"/>
                                    <field name="quantity"/>
                                    <field name="price"/>
                                    <field name="vendor"/>
                                    <field name="type"/>
                                </tree>
                                <form>
                                    <group>
                                        <group name="group_general">
                                            <field name="product_id"/>
                                            <field name="name"/>
                                            <field name="sku"/>
                                            <field name="quantity"/>
                                        </group>
                                        <group>
                                            <field name="vendor"/>
                                            <field name="type"/>
                                            <field name="price"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
              </form>
            </field>
        </record>

        <record id="haravan_seller_order_view_tree" model="ir.ui.view">
            <field name="name">haravan.seller.order.view.tree</field>
            <field name="model">haravan.seller.orders</field>
            <field name="arch" type="xml">
                <tree string="Haravan Order">
                    <field name="order_id"/>
                    <field name="name" />
                    <field name="address1" />
                    <field name="created_at"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="created_at"/>
                    <field name="fulfillment_status"/>
                    <field name="gateway"/>
                    <field name="financial_status"/>
                    <field name="subtotal_price"/>
                    <field name="source_name"/>
                </tree>
            </field>
        </record>

        <record id="haravan_seller_order_view_action" model="ir.actions.act_window">
            <field name="name">Seller Order</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">haravan.seller.orders</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    There is no examples click create to add new Order.
                </p>
            </field>
        </record>

    <!-- This Menu Item must have a parent and an action -->
        <menuitem id="haravan_seller_order_menu" name="Order"
                  parent="haravan_integration_root" sequence="2"/>

        <menuitem id="haravan_seller_order" name="Order"
                  parent="haravan_seller_order_menu" action="haravan_seller_order_view_action"/>

        <menuitem id="haravan_seller_customer" name="Customers"
                  parent="haravan_seller_order_menu" />

<!--    <menuitem id="haravan_seller_order" name="Customers"-->
<!--              parent="haravan_seller_order_menu" action=""/>-->

    </data>
</odoo>