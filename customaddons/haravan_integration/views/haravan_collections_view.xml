<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="haravan_collections_view_form" model="ir.ui.view">
            <field name="name">haravan.collections.view.form</field>
            <field name="model">haravan.collections</field>
            <field name="arch" type="xml">
                <form string="Haravan Collections" create="false">
                    <!--                    <header>-->
                    <!--                        <button name="get_categories_haravan" string="Get categories" class="oe_highlight" type="object"/>-->
                    <!--                    </header>-->
                    <sheet>
                        <field name="collec_url_image" widget="image_url" class="oe_avatar"/>
                        <div class="oe_title">
                            <label class="oe_edit_only" for="collec_id"/>
                            <h1>
                                <field name="collec_id" placeholder="ID Collection" required="True"/>
                            </h1>
                        </div>
                        <group>
                            <field name="collec_title"/>
                            <field name="collec_descriptions"/>
                            <field name="collec_created_at"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="haravan_collections_view_tree" model="ir.ui.view">
            <field name="name">haravan.collections.view.tree</field>
            <field name="model">haravan.collections</field>
            <field name="arch" type="xml">
                <tree string="Haravan Collection">
                    <field name="collec_id"/>
                    <field name="collec_title"/>
                    <field name="collec_descriptions"/>
                    <field name="collec_created_at"/>
                </tree>
            </field>
        </record>

        <record id="haravan_collections_view_action" model="ir.actions.act_window">
            <field name="name">Haravan Collections</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">haravan.collections</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There are haravan property, you only have permission to view.
                </p>
            </field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="haravan_collections_menu" name="Collections"
                  parent="haravan_integration_root" action="haravan_collections_view_action"
                  sequence="4"/>
    </data>
</odoo>