<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="haravan_categories_view_form" model="ir.ui.view">
            <field name="name">haravan.categories.view.form</field>
            <field name="model">haravan.categories</field>
            <field name="arch" type="xml">
                <form string="Haravan Categories" create="false">
<!--                    <header>-->
<!--                        <button name="get_categories_haravan" string="Get categories" class="oe_highlight" type="object"/>-->
<!--                    </header>-->
                    <sheet>
                        <group>
                            <field name="product_type"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="haravan_categories_view_tree" model="ir.ui.view">
            <field name="name">haravan.categories.view.tree</field>
            <field name="model">haravan.categories</field>
            <field name="arch" type="xml">
                <tree string="Haravan Categories">
                    <field name="product_type"/>
                </tree>
            </field>
        </record>

        <record id="haravan_categories_view_action" model="ir.actions.act_window">
            <field name="name">Haravan Categories</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">haravan.categories</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There are haravan property, you only have permission to view.
                </p>
            </field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="haravan_categories_menu" name="Categories"
                  parent="haravan_integration_root" action="haravan_categories_view_action"
                  sequence="4"/>
    </data>
</odoo>