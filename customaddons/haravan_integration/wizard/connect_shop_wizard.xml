<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="connect_shop_wizard_view" model="ir.ui.view">
            <field name="name">connect.shop.wizard.form.view</field>
            <field name="model">connect.shop.wizard</field>
            <field name="arch" type="xml">
                <form string="Connect Haravan Integration">
                    <sheet>
                        <group>
                            <field name="code" required="True"/>
                            <field name="client_id" required="True"/>
                            <field name="client_secret" required="True"/>
                            <field name="grant_type" required="True"/>
                            <field name="redirect_uri" required="True"/>
                        </group>
                        <footer>
                            <button name="get_token_haravan" string="Connect" type="object" class="btn-primary"/>
                            <button string="Cancel" class="btn-secondary" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="connect_shop_wizard_act_window" model="ir.actions.act_window">
            <field name="name">Connect Haravan Integration</field>
            <field name="res_model">connect.shop.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="connect_shop_wizard_view"/>
            <field name="target">new</field>
        </record>
    </data>
</odoo>